<h1>Edit Movie</h1>
<%= form_for @movie do |f| %>
  <!-- AquÃ­ coloca los campos que quieras editar -->
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating %>
  </div>
  
  <div class="field">
    <%= f.label :release_date %>
    <%= f.date_field :release_date %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Movie' %>
  </div>
<% end %>
